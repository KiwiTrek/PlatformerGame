<!-- Config file for the game -->

<config>
    <app framerateCap="60">
        <title>Adventure in Dream World (GOLD)</title>
        <organization>UPC CITM</organization>
        <generalTileSize value="64"/>
    </app>

    <renderer>
        <vsync value="false"/>
    </renderer>

    <window>
        <resolution width="1280" height="720" scale="1"/>
        <fullscreen value="false"/>
        <borderless value="false"/>
        <resizable value="false"/>
        <fullscreenWindow value="false"/>
    </window>

    <audio>
        <music volume="64"/>
        <fx volume="48"/>
    </audio>

    <map>
        <folder>Assets/Maps/</folder>
    </map>

    <deathScene>
        <folderTexture>Assets/Textures/Screens/Gameplay/</folderTexture>
        <folderAudioMusic>Assets/Audio/Music/</folderAudioMusic>
    </deathScene>

    <logoScene>
        <timer value ="0.0"/>
        <folderTexture>Assets/Textures/Screens/Logo/</folderTexture>
        <folderAudioFx>Assets/Audio/Fx/</folderAudioFx>
    </logoScene>

    <scene>
        <camera x ="0" y="-128"/>
        <folderTexture>Assets/Textures/Screens/Gameplay/</folderTexture>
        <folderAudioMusic>Assets/Audio/Music/</folderAudioMusic>
    </scene>

