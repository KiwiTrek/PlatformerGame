    </titleScene>

    <entityManager>
        <folderTexture>Assets/Textures/Entities/</folderTexture>
        <folderAudioFx>Assets/Audio/Fx/</folderAudioFx>
        <folderMap>Assets/Maps/</folderMap>
    </entityManager>

    <guiManager>
        <folderTexture>Assets/Textures/GUI/</folderTexture>
