<!-- Config file for the game -->

<config>
  <app framerate_cap="60">
    <title>Adventure in Dream World (ALPHA)</title>
    <organization>UPC CITM</organization>
  </app>

  <renderer>
    <vsync value="false"/>
  </renderer>

  <window>
    <resolution width="1280" height="720" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

    <player>
        <playerSize value ="128"/>
        <folderTexture>Assets/textures/</folderTexture>
        <folderAudioFx>Assets/Audio/Fx/</folderAudioFx>
    </player>

    <audio>
        <music volume="64"/>
        <fx volume="48"/>
    </audio>

    <map>
        <folder>Assets/Maps/</folder>
    </map>

    <deathScene>
        <folderTexture>Assets/Textures/</folderTexture>
        <folderAudioMusic>Assets/Audio/Music/</folderAudioMusic>
    </deathScene>

    <logoScene>
        <timer value ="0"/>
        <folderTexture>Assets/Textures/</folderTexture>
        <folderAudioFx>Assets/Audio/Fx/</folderAudioFx>
    </logoScene>

    <scene>
        <camera x ="0" y="-128"/>
        <folderTexture>Assets/Textures/Background/</folderTexture>
        <folderAudioMusic>Assets/Audio/Music/</folderAudioMusic>
    </scene>

    <titleScene>
        <folderTexture>Assets/Textures/</folderTexture>
        <folderAudioMusic>Assets/Audio/Music/</folderAudioMusic>
    </titleScene>
</config>